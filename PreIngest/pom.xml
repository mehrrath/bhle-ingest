			<id>semweb4j-repo</id>
			<name>Semweb4j.org maven repo</name>
			<url>http://semweb4j.org/repo/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>

		<!-- AIT repo for mets-api, jhove -->
		<repository>
			<id>ait-repo</id>
